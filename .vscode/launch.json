{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch C Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}", // Path to the executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true, // Set to true to see console input/output in a separate window
            "MIMode": "gdb", // Or "lldb" for Clang/LLDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build C file" // This links to the task in tasks.json
        }
    ]
}